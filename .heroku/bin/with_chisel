#!/usr/bin/env bash

if (( $# == 0 )); then
   echo "Illegal number of parameters (requires at least 1)"
   exit 1
elif (( $1 < 0 || $1 > 65535 )); then
   echo "Port number out of range"
   exit 2
fi

PORT=$1
CMD="${@:2}"

# Start chisel server
if [[ ! -z $CHISEL_KEY ]]; then
  CHISEL_CMD="--key '$CHISEL_KEY'"
fi

if [[ ! -z $CHISEL_PROXY ]]; then
  CHISEL_CMD="$CHISEL_CMD --proxy '$CHISEL_PROXY'"
fi

if [[ ! -z $CMD ]]; then
  echo "Starting chisel as: chisel server --port $PORT $CHISEL_CMD &"
  eval "chisel server --port $PORT $CHISEL_CMD &"

  # Eval the rest...
  eval "$CMD"
else
  echo "Starting chisel as: chisel server --port $PORT $CHISEL_CMD"
  eval "chisel server --port $PORT $CHISEL_CMD"
fi
